[build]
  # Simplified build command
  command = "cd nodejs-app && npm install"
  
  # Directory to publish (where the static files are)
  publish = "nodejs-app/public"
  
  # Functions directory for serverless functions
  functions = "netlify/functions"

[build.environment]
  # Node.js version
  NODE_VERSION = "18"

# Simple SPA redirect - only for non-existing files
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200

# Headers removed temporarily to fix post-processing hang
# [[headers]]
#   for = "/*"
#   [headers.values]
#     X-Frame-Options = "DENY"

# Environment variables (will be set in Netlify dashboard)
# GEMINI_API_KEY = "your_api_key_here"
